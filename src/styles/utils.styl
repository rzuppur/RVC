@import "shared.styl"

/*
SPACING
 */

for direction in "top" "bottom"
  .space-{direction}-tiny
    margin-{direction} $space-tiny

  .space-{direction}-small
    margin-{direction} $space-small

  .space-{direction}-medium
    margin-{direction} $space-medium

  .space-{direction}-large
    margin-{direction} $space-large

  .space-{direction}-huge
    margin-{direction} $space-huge


.margin-top-none
  margin-top 0 !important

.margin-bottom-none
  margin-bottom 0 !important

.margin-vertical-none
  margin-top 0 !important
  margin-bottom 0 !important

.margin-horizontal-none
  margin-left 0 !important
  margin-right 0 !important

.margin-none
  margin 0 !important

/*
CONTAINERS
 */

$_container-tiny =  $space-medium * 10
$_container-small =  $space-medium * 20
$_container-medium =  $space-medium * 30
$_container-large =  $space-medium * 40
$_container-huge =  $space-medium * 60

.r-container
  margin-left auto
  margin-right auto
  padding-left $space-medium
  padding-right $space-medium

for size in "huge" "large" "medium" "small" "tiny"
  .r-container-{size}
    max-width lookup("$_container-" + size)

.r-container-maximum
  max-width none

.r-container-row
  display flex
  flex-direction row
  margin-left auto
  margin-right auto
  overflow-x auto
  overflow-y hidden

  & > .r-container-column
    flex-grow 0
    flex-shrink 1
    min-width $_container-tiny - $space-medium
    max-width none
    padding-left $space-medium
    padding-right $space-medium

  for size in "huge" "large" "medium" "small" "tiny"
    & > .r-container-{size}
      flex-basis lookup("$_container-" + size)

  & > .r-container-maximum
    flex-grow 1
    flex-basis 100%

  for size in "large" "medium" "small"
    &.r-columns-mobile-{size}
      @media (max-width lookup("$_container-" + size))
        display block

        & > .r-container-column
          max-width none
          min-width 0

/*
FLEX
 */

for n in 0 1 2 3
  .flex{n}
    flex n n auto
