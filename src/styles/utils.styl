/*
SPACING
 */

for size in "huge" "large" "medium" "small" "tiny"
  for type in "margin" "padding"
    .{type}-{size}[class]
      {type} lookup("$space-" + size)

for direction in "top" "bottom" "left" "right"
  for size in "huge" "large" "medium" "small" "tiny"
    for type in "margin" "padding"
      .{type}-{direction}-{size}[class]
        {type}-{direction} lookup("$space-" + size)

.margin-top-none
  margin-top 0 !important

.margin-bottom-none
  margin-bottom 0 !important

.margin-none
  margin 0 !important


/*
FULL HEIGHT
 */

.r-fill-absolute-parent
  position relative

  & > .r-fill-absolute
    position absolute
    top 0
    bottom 0
    left 0
    right 0

/*
CONTAINERS
 */

.r-container
  margin-left auto
  margin-right auto
  padding-left $space-medium
  padding-right $space-medium

for size in "huge" "large" "medium" "small" "tiny"
  .r-container-{size}
    max-width lookup("$container-" + size)

.r-container-maximum
  max-width none

.r-container-row
  display flex
  flex-direction row
  margin-left auto
  margin-right auto
  overflow-x auto

  & > .r-container-column
    flex-grow 0
    flex-shrink 1
    min-width $container-tiny - $space-medium
    max-width none
    padding-left $space-medium
    padding-right $space-medium

  for size in "huge" "large" "medium" "small" "tiny"
    & > .r-container-{size}
      flex-basis lookup("$container-" + size)

  & > .r-container-maximum
    flex-grow 1
    flex-basis 100%

  for size in "large" "medium" "small"
    &.r-columns-mobile-{size}
      @media (max-width lookup("$container-" + size))
        display flex
        flex-direction column
        position static

        &.r-columns-mobile-reverse
          flex-direction column-reverse

        & > .r-container-column
          flex-basis auto
          max-width none
          min-width 0


  &.r-fill-absolute
    & > .r-container-column
      overflow-y auto
      -webkit-overflow-scrolling touch


/*
FLEX
 */

.flex-container
  display flex
  flex-direction row

.flex-container-column
  flex-direction column

.flex-items-start
  align-items start

.flex-items-center
  align-items center

.flex-items-end
  align-items end

for n in 0 1 2 3
  .flex{n}
    flex n n auto

/*
CLEARFIX
 */

.clearfix:before,
.clearfix:after
    content " "
    display table

.clearfix:after
    clear both

/*
MEDIA
 */
for size in "medium" "small"

  &.r-media-hide-{size}[class]
    @media (max-width lookup("$container-" + size))
      display none

  &.r-media-show-{size}[class]
    @media (min-width (lookup("$container-" + size) + 1px))
      display none
