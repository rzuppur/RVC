.r-form-group
  margin-bottom $space-medium

.r-form-label
  display block
  margin-bottom $space-extra-tiny

.r-input-text
  control()
  color $color-text
  background alpha($color-text, 1%)

  &::placeholder
    color $color-text-quiet
    opacity 0.8

  .darkMode &
    color $color-text-darkmode
    background alpha($color-white, 5%)

    &::placeholder
      color $color-text-quiet-darkmode

  &.invalid
    box-shadow inset 0 0 0 1px $color-text-red

textarea.r-input-text
  overflow hidden
  height auto
  padding 9px 12px
