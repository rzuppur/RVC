*,
*::before,
*::after
  box-sizing border-box

body,
h1,
h2,
h3,
h4,
p,
ul,
ol,
li,
figure,
figcaption,
blockquote,
dl,
dd,
pre,
hr
  margin 0

body
  scroll-behavior smooth
  -webkit-text-size-adjust 100%
  text-size-adjust 100%
  font-kerning normal
  background #ffffff

a:not([class])
  text-decoration-skip-ink auto

img
  max-width 100%
  display block

input,
button,
textarea,
select
  font inherit

h1,
h2,
h3,
h4,
h5,
h6
  font-weight inherit
  font-size inherit
