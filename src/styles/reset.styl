*,
*::before,
*::after
  box-sizing border-box

ul[class],
ol[class]
  padding 0
  list-style none

body,
h1,
h2,
h3,
h4,
p,
ul[class],
ol[class],
li,
figure,
figcaption,
blockquote,
dl,
dd,
pre
  margin 0

body
  scroll-behavior smooth
  -webkit-text-size-adjust 100%
  text-size-adjust 100%
  font-kerning normal
  background $color-white

a:not([class])
  text-decoration-skip-ink auto

img
  max-width 100%
  display block

input,
button,
textarea,
select
  font inherit

h1,
h2,
h3,
h4,
h5,
h6
  font-weight inherit
  font-size inherit
