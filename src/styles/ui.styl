/*
AREAS
 */

.r-background-primary
  background $color-white
  color $color-text

  .darkMode &
    background $color-background-darkmode
    color $color-text-darkmode

.r-background-secondary
  background $color-background-light-gray
  color $color-text

  .darkMode &
    background lighten($color-background-darkmode, 6%)
    color $color-text-darkmode

/*
SCROLLBAR
 */

.r-styled-scrollbar

  &::-webkit-scrollbar
    width 8px
    height 8px

  &::-webkit-scrollbar-track
    background-color alpha($color-black, 5%)
    border-radius 0

  &::-webkit-scrollbar-thumb
    border-radius 4px
    min-height 40px
    background alpha($color-black, 20%)

  &::-webkit-scrollbar-thumb:window-inactive
    background alpha($color-black, 15%)

  .darkMode &,
  &.darkMode

    &::-webkit-scrollbar-track
      background-color transparent

    &::-webkit-scrollbar-thumb,
    &::-webkit-scrollbar-thumb:window-inactive
      background alpha($color-white, 15%)
